{
  "name": "donut",
  "version": "0.0.1",
  "description": "A P2P demo app for Beaker using Dat (fritter clone)",
  "main": "index.js",
  "scripts": {
    "build:css": "lessc index.less assets/index.css",
    "build:js": "browserify index.js > assets/index.js",
    "build:js-prod": "browserify index.js | uglifyjs -c > assets/index.js",
    "build": "npm run build:js && npm run build:css",
    "build-prod": "npm run build:js-prod && npm run build:css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kustomzone/donut.git"
  },
  "keywords": [
    "beaker",
    "dat",
	"donut",
	"fritter"
  ],
  "author": "Andrew Kidoo <...@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kustomzone/donut/issues"
  },
  "homepage": "https://github.com/kustomzone/donut#readme",
  "dependencies": {
    "@beaker/libfritter": "^2.1.3",
    "nanorouter": "^2.2.0",
    "yo-yo": "^1.4.1"
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "less": "^2.7.3",
    "uglify-es": "^3.3.5"
  }
}
